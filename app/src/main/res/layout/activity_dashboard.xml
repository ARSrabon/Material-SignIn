<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="app.materialsignup.DashboardActivity">

    <ImageView
        android:layout_width="0dp"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:src="@drawable/snap_dashboard"
        app:layout_constraintLeft_toLeftOf="@+id/activity_dashboard"
        app:layout_constraintTop_toTopOf="@+id/activity_dashboard"
        app:layout_constraintRight_toRightOf="@+id/activity_dashboard"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_height="289dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <View
        android:background="#000000"
        android:alpha="0.2"
        android:id="@+id/view"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/activity_dashboard"
        app:layout_constraintVertical_bias="0.77" />

    <app.materialsignup.fonts.robotoRegular
        android:text="Good Morning!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintRight_toRightOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintBottom_toTopOf="@+id/iv_dp"
        android:layout_marginBottom="8dp"
        android:textSize="28sp"
        app:layout_constraintVertical_bias="0.90999997"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="104dp"
        android:src="@drawable/my_dp"
        app:srcCompat="@drawable/my_dp"
        tools:siBorderColor="#fff"
        android:id="@+id/iv_dp"
        app:siBorderColor="#ffffff"
        android:layout_height="104dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="@+id/activity_dashboard"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="49dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_dashboard" />

    <com.andexert.library.RippleView
        android:id="@+id/search_"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:rv_rippleDuration="300"
        app:rv_color="@color/rippelColor"
        rv_centered="true"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_search_white_24dp"
            android:id="@+id/imageView2"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp" />

    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/more"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:rv_rippleDuration="300"
        app:rv_color="@color/rippelColor"
        rv_centered="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_reorder_white_24dp"
            android:id="@+id/imageView3"
            tools:layout_constraintTop_creator="1"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintLeft_toLeftOf="@+id/imageView"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp" />

    </com.andexert.library.RippleView>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_white_24dp"
        android:id="@+id/imageView6"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_white_24dp"
        android:id="@+id/imageView7"
        android:scaleX="-1"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        android:layout_marginBottom="16dp" />

    <app.materialsignup.fonts.robotoThinBold
        android:text="September"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginStart="141dp"
        android:layout_marginLeft="141dp"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/iv_dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/imageView7"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/imageView6" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:id="@+id/weekda"
        android:gravity="center"

        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/view">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SUN"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MON"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TUE"
            android:layout_weight="1"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="WED"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="THU"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FRI"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SAT"
            android:layout_weight="1"
            />
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:id="@+id/linearLayout2"
        android:gravity="center"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/weekda"
        app:layout_constraintTop_toBottomOf="@+id/weekda"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/weekda"
        app:layout_constraintHorizontal_bias="0.0">

        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:layout_weight="1"
            />
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_weight="1"
            />
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_weight="1"
            />
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_weight="1"
            />
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="11"
            android:layout_weight="1"
            />
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="12"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            />
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="13"
            android:layout_marginRight="10dp"

            android:layout_weight="1"
            />

    </LinearLayout>

    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintRight_toRightOf="@+id/linearLayout2"
        app:layout_constraintLeft_toLeftOf="@+id/linearLayout2"
        app:layout_constraintBottom_toBottomOf="@+id/activity_dashboard"
        android:id="@+id/my_list"


        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:text="3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="#ffffff"

        android:gravity="center"
        android:id="@+id/textView7"
        android:background="@drawable/notification_circle"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/iv_dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="6dp" />


</android.support.constraint.ConstraintLayout>
