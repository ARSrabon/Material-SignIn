<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shoes"
    android:id="@+id/constraintLayout2">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        android:alpha="0.2"

        android:id="@+id/view2"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2" />


    <app.materialsignup.fonts.robotoRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lines"
        android:textSize="25sp"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintLeft_toLeftOf="@+id/view2"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="62dp" />

    <app.materialsignup.fonts.robotoThin
        android:layout_width="294dp"
        android:layout_height="53dp"
        android:text="Welcome back!"
        android:id="@+id/textView2"
        android:textSize="39sp"
        android:textColor="#ffffff"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/view2"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp" />

    <app.materialsignup.fonts.robotoThin
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sign in to continue \nto Lines"
        android:id="@+id/textView3"
        android:textColor="#A6AEBA"
        android:textSize="34sp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/view2"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp" />

    <EditText
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Email"
        android:textColor="#fff"
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        android:textColorHint="#fff"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginTop="62dp"
        app:layout_constraintLeft_toLeftOf="@+id/view2"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp" />

    <View
        android:layout_width="211dp"
        android:layout_height="2dp"
        android:background="#fff"
        android:id="@+id/view3"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        android:layout_marginLeft="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="Password"
        android:textSize="20sp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:inputType="textPassword"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toTopOf="@+id/view3"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp" />

    <app.materialsignup.fonts.robotoThinBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/login"
        android:textColor="#0593D9"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        app:layout_constraintLeft_toLeftOf="@+id/view2"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp" />

    <LinearLayout
        android:layout_below="@id/login"
        android:layout_width="384dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp">


        <app.materialsignup.fonts.robotoRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Don't have an account?"
            android:id="@+id/textView5"
            android:textColor="#A6AEBA"

            android:layout_below="@+id/login"
            android:layout_alignLeft="@+id/login"
            android:layout_alignStart="@+id/login" />

        <app.materialsignup.fonts.robotoThinBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            />



    </LinearLayout>

</android.support.constraint.ConstraintLayout>